                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>com.mosioj.ideescadeaux.tasks.IdeesCadeauxTask</mainClass>
                        </manifest>
                    </archive>
                    <appendAssemblyId>false</appendAssemblyId>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                    <outputDirectory>C:\Users\JORDAN\Downloads</outputDirectory>
                    <finalName>NosIdeesDeCadeauxTasks</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>